{% extends layout %}
{% block content %}
<form method='post' action="/login/">
<div class="input-group mb-3">
  <input type="text" id="name" name="name" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
</div>

<div class="input-group mb-3">
  <input type="password" id="password" name="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon2">
</div>
<button type="submit" class="btn btn-primary btn-sm">Sign in</button>

</form>
<div class="noaccount">
    <a href="/signup">Don't have an account, Sign up</a>
</div>
{% endblock %}