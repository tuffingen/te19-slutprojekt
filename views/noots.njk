{% extends layout %}
{% block content %}
{% include 'components/navbar-noots.njk' %}
<main class="container">

<div class="input-noots">
<h2>Whats on your mind?</h2>
<form action="/noots" method="POST">
    <div class="input-group mb-3">
  <input type="noot" name="noot" value= "{{ meep }}" class="form-control" placeholder="Type something..." aria-label="Recipient's username" aria-describedby="button-addon2">
    </div>
    </form>
</div>

    <ul>
    {% for noot in noots %}
  <div class="noot">
  <div class="noot-header">
    {{ noot.name }}
    <a class="noot-delete float-end" href="/noots/{{ noot.id }}/delete"><i class="bi bi-dash-square"></i></a>
  </div>
  <div class="noot-body">
    <blockquote class="blockquote mb-0">
      <p>{{noot.body}}</p>
      <footer class="noot-footer">{{noot.created_at}}</footer>
    </blockquote>
  </div>
</div>
    {%endfor%}
    </ul>
    
</main>


{% endblock %}
